@page
@model TeamBlog.Pages.Articles.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center my-5">
    <h1 class="fw-bolder">Welcome to TeamBlog Home!</h1>
    <p class="lead mb-0">A Bootstrap 5 starter layout for your next blog homepage</p>
</div>
<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="row">
            @foreach (var item in Model.Article)
            {
                <div class="col-lg-6">
                    <div class="card mb-4">
                        @if (item.FileName != null)
                        {
                            <a asp-page="./Articles/Details" asp-route-id="@item.ArticleID">
                                <img class="card-img-top"
                             src="data:image/jpeg;base64,@Convert.ToBase64String(item.File)"
                             alt="Item.Filename">
                            </a>
                        }
                        <div class="card-body">
                            <div class="small text-muted">
                                @Html.DisplayFor(modelItem => item.PubDate)
                            </div>
                            <h2 class="card-title">
                                    @Html.DisplayFor(modelItem => item.Title)
                            </h2>

                            <p class="card-text">
                                @Html.DisplayFor(modelItem => item.Excerpt)
                            </p>
                            <a class="btn btn-primary" asp-page="./Articles/Details" asp-route-id="@item.ArticleID">Read more →</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


